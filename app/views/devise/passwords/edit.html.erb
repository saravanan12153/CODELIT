<div class="passwordBox animated fadeInDown">
  <div class="row">

    <div class="col-md-12">
      <div class="ibox-content">

        <h2 class="font-bold">Change your password</h2>

        <p>
          Enter your email address and your password reset information will be emailed to you.
        </p>

        <div class="row">

          <div class="col-lg-12">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: "m-t"}) do |f| %>
              <%= render 'shared/deviseToasts' %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password", required: "", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", required: "", class: "form-control" %>
              </div>

              <%= f.button "Change my password", class: "btn btn-primary block full-width m-b", data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Changing..."} %>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      Copyright CODElit
