<div class="passwordBox animated fadeInDown">
  <div class="row">

    <div class="col-md-12">
      <div class="ibox-content">

        <h2 class="font-bold">Forgot password</h2>

        <p>
          Enter your email address and your password reset information will be emailed to you.
        </p>

        <div class="row">

          <div class="col-lg-12">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "m-t"}) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: "Email Address", required: "", class: "form-control" %>
              </div>

              <%= f.button "Send reset password instructions", class: "btn btn-primary block full-width m-b", data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Sending..."} %>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
