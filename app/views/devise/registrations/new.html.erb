<div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <div>

      <h3 class="logo-name">CODElit</h3>

    </div>
    <h3>Register to CODElit</h3>

    <p>Create account to get started.</p>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "m-t"}) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email", required: "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", required: "", class: "form-control" %>
      </div>
      <%= f.button "Register", class: "btn btn-primary block full-width m-b", data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Registering..."} %>

      <p class="text-muted text-center">
        <small>Already have an account?</small>
      </p>
      <a class="btn btn-sm btn-white btn-block" href="<%= new_user_session_path %>">Login</a>
    <% end %>
    <p class="m-t">
      <small>CODElit: Learn by Doing Projects &copy; 2015</small>
    </p>
  </div>
  <br/><br/><br/>
</div>
