<div class="row border-bottom">
    <nav class="navbar navbar-fixed-top white-bg" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
            <%= search_form_for @q, url: search_path, html: { method: :post, class: "navbar-form-custom" } do |f| %>
              <div class="form-group">
                <%= f.search_field :title_or_description_cont, placeholder: 'Search for something...', class: 'form-control', style: "color: #ffffff;", id: "top-search"%>
              </div>
            <% end %>
<!--             <form role="search" class="navbar-form-custom" method="post" action="/">
                <div class="form-group">
                    <input type="text" placeholder="Search for something..." class="form-control" name="top-search" id="top-search" />
                </div>
            </form> -->
        </div>
        <ul class="nav navbar-top-links navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown" data-behavior="notifications" data-notifications='<%= render template: "notifications/index", formats: [:json] %>'>
                <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#" data-behavior="notifications-link">
                    <i class="fa fa-bell"></i>  <span class="label label-danger" data-behavior="unread-count"></span>
                </a>
                <ul class="dropdown-menu dropdown-messages" data-behavior="notification-items">

                </ul>
            </li>
            <li class="dropdown">
              <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                <%= image_tag current_user.avatar.url(:medium), alt: current_user.name, class: "img-circle", style: "width: 20px; height: 20px" %> <i class="fa fa-caret-down"></i>
              </a>
              <ul class="dropdown-menu dropdown-messages">
                <li>
                  <%= link_to user_path(current_user) do %>
                    <i class="fa fa-user"></i> Profile
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_registration_path do %>
                    <i class="fa fa-pencil-square-o"></i> Edit Profile
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i> Log out
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-sign-in"></i> Log In
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
                <i class="fa fa-sign-in"></i> Sign Up
              <% end %>
            </li>
          <% end %>
        </ul>
    </nav>
</div>
