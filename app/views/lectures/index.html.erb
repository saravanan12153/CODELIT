<!-- Page Title-->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>
      <%= @course.title %>
      <% if @course.lectures.count > 0 %>
      <div class="progress progress-striped active">
        <div style="width: <%= @course.progress?(current_user) %>%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="50" role="progressbar" class="progress-bar progress-bar-primary">
        </div>
      </div>
      <% end %>
    </h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= courses_path %>">Courses</a>
      </li>
      <li class="active">
        <strong><%= @course.title %></strong>
      </li>
    </ol>
  </div>
</div>
<br>

<div class="wrapper wrapper-content">
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content mailbox-content">
        <div class="file-manager">
          <h5 class="text-center">Lectures</h5>
          <ul class="folder-list m-b-md" style="padding: 0">
            <% @lectures.each do |lecture| %>
              <li>
                <a href="<%= course_lecture_path(@course,lecture) %>"> <i class="fa fa-play "></i> <%= lecture.seq %>. <%= lecture.title %>
                  <% if lecture.doing?(current_user) %>
                    <span class="pull-right"> <i class="fa fa-circle"></i></span>
                  <% elsif lecture.done?(current_user) %>
                    <span class="pull-right"> <i class="fa fa-check"></i></span>
                  <% end %>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
